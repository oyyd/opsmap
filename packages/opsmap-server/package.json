{
  "name": "opsmap-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node lib/cli/index.js",
    "start:dev": "node lib/cli/index.js --web-static-prefix '//localhost:3000/build'",
    "build": "rm -rf lib && babel src --out-dir lib",
    "build:watch": "rm -rf lib && babel src -w --out-dir lib",
    "dev": "node scripts/dev.js",
    "flow": "flow",
    "eslint": "eslint src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "oyyd <oyydoibh@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "koa": "^2.2.0",
    "koa-router": "^7.1.1",
    "koa-static": "^3.0.0",
    "mongodb": "^2.2.26",
    "opsmap-web": "^1.0.0",
    "ua-parser-js": "^0.7.12",
    "yargs": "^8.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "chokidar": "^1.7.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-flowtype-errors": "^3.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "flow-bin": "^0.45.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "flowtype-errors",
      "flowtype"
    ],
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "no-restricted-syntax": 0,
      "no-await-in-loop": 0,
      "flowtype-errors/show-errors": 2
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "flow"
    ],
    "plugins": [
      "transform-async-to-generator"
    ]
  }
}
